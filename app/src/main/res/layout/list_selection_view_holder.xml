<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView

            android:maxWidth="40dp"
            android:minWidth="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="# 102"
            android:textSize="12sp"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/rvh_costumer_name"
            android:maxWidth="100dp"
            android:minWidth="100dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/quicksand_bold"
            android:text="Muhammad Farras Ma'ruf"
            android:textSize="12sp"/>

        <com.google.android.material.card.MaterialCardView
            app:cardBackgroundColor="@color/teal_200"
            android:id="@+id/mcv_waiting_list"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:id="@+id/card_costumer_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/card_gradient"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/rvh_costumer_problem_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxWidth="70dp"
                    android:minWidth="70dp"
                    android:text="Waiting List"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:minWidth="100dp"
            android:maxWidth="100dp"
            android:layout_marginRight="5dp"
            android:textAlignment="viewEnd"
            android:id="@+id/rvh_costumer_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:fontFamily="@font/quicksand_bold"
            android:text="Rp200.000"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>